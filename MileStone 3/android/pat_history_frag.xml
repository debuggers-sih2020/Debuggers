<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/et_mobile_no_phf"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Contact Number"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corner_new"
        android:inputType="number"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_history_phf"
        android:layout_width="107dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="Search History"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/et_mobile_no_phf"
        app:layout_constraintStart_toStartOf="@+id/et_mobile_no_phf"
        app:layout_constraintTop_toBottomOf="@+id/et_mobile_no_phf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_phf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:padding="1dp"
        android:background="@drawable/rounded_corner_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_history_phf"></androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>